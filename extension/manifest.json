{
  "manifest_version": 3,
  "name": "DPBH Extension Abhinav",
  "version": "2.0",
  "description": "This extension is for the DPBH hackathon",
  "permissions": [
    "activeTab", "storage", "scripting"
  ],
  "background": {
    "service_worker": "./scripts/background.js"
  },
  "action": {
    "default_popup": "./popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/scripts/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/scripts/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
